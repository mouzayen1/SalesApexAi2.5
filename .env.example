# ===========================================
# SalesApexAI Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Database (OPTIONAL - app works without it)
# If set, vehicles can be loaded from PostgreSQL database
# If not set, vehicles load from static dataset (50 vehicles)
# DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Groq AI API (OPTIONAL - for AI deal analysis)
# Get your API key from https://console.groq.com
# If not set, deal analysis returns fallback responses
# GROQ_API_KEY=your_groq_api_key_here
# GROQ_MODEL=llama-3.1-70b-versatile

# Server (for local development only)
PORT=3001
NODE_ENV=development

# Client (for local development only - Vite)
VITE_API_URL=http://localhost:3001
